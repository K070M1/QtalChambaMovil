<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:layout_gravity="center_horizontal"
    tools:context=".Perfil">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="250dp"
            app:cardBackgroundColor="@color/white">


            <ImageView
                android:id="@+id/imgPortUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/portadaa">
            </ImageView>

            <ImageButton
                android:id="@+id/btGPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="310dp"
                android:layout_marginTop="210dp"
                android:src="@drawable/foto" />


        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Calificaciones"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="100dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="75dp">

            <ImageView
                android:id="@+id/imgPerfUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/perfill">
            </ImageView>

            <ImageButton
                android:id="@+id/btGPerf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="115dp"
                android:src="@drawable/foto" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="310dp"
        android:text="NombreUsuario"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:text="Calificaciones"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="80dp"
            android:text="Seguidores"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp"
            android:layout_marginLeft="20dp"
            android:text="Sigues"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal">

        <RatingBar style = "?android:attr/ratingBarStyleSmall"
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5" />

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="95dp">

            <TextView
                android:id="@+id/txtSeguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"
                android:text=""/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="25dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:id="@+id/txtSeguidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textSize="17dp"
                android:text=""/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>


    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="455dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- botonVolver-->
            <ImageButton
                android:id="@+id/btVolverServicios"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:backgroundTint="#EEEEEE"
                android:src="@drawable/volver" />


            <Button
                android:id="@+id/btInformacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:backgroundTint="#EEEEEE"
                android:text="InformaciÃ³n"
                android:textColor="#878787  "
                android:textSize="12dp"
                app:cornerRadius="15dp" />


            <Button
                android:id="@+id/btAmigos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#EEEEEE"
                android:text="Amigos"
                android:textColor="#878787  "
                android:textSize="12dp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btTrabajos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:backgroundTint="#EEEEEE"
                android:text="Trabajos"
                android:textColor="#919191"
                android:textSize="12dp"
                app:cornerRadius="15dp" />

            <Button
                android:id="@+id/btForo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:backgroundTint="#EEEEEE"
                android:text="Foro"
                android:textColor="#919191"
                android:textSize="12dp"
                app:cornerRadius="15dp" />


        </LinearLayout>
    </HorizontalScrollView>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="525dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:cardBackgroundColor="#EEEEEE"
            app:cardCornerRadius="10dp">

            <ImageButton
                android:id="@+id/btAplicarDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/comprobado"/>
            <ImageButton
                android:id="@+id/btCancelarDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dp"
                android:src="@drawable/da"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion:"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:layout_marginLeft="135dp"
                android:textSize="16dp"/>

            <ImageButton
                android:id="@+id/btEditarDescripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:src="@drawable/editar"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>




</RelativeLayout>