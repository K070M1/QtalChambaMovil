<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PerfilFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="370dp"
                android:layout_height="250dp"
                android:background="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/portadaa">
                </ImageView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="300dp"
                    android:layout_marginTop="210dp"
                    android:src="@drawable/foto" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Calificaciones"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="150dp"
                android:layout_marginLeft="100dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="75dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/perfill">
                </ImageView>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="55dp"
                    android:layout_marginTop="115dp"
                    android:src="@drawable/foto" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="310dp"
            android:text="NombreUsuario"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:text="Calificaciones"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="80dp"
                android:text="Seguidores"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:layout_marginLeft="20dp"
                android:text="Sigues"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="79dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="400dp"
            android:orientation="horizontal">

            <RatingBar style = "?android:attr/ratingBarStyleSmall"
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#EEEEEE"
                app:cardCornerRadius="25dp"
                android:layout_marginLeft="95dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="17dp"
                    android:text="5"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#EEEEEE"
                app:cardCornerRadius="25dp"
                android:layout_marginLeft="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="17dp"
                    android:text="2"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="470dp">


                <Button
                    android:id="@+id/btInformacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#878787  "
                    android:textSize="12dp"
                    app:cornerRadius="15dp"
                    android:text="InformaciÃ³n"/>

                <Button
                    android:id="@+id/btGaleria"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#919191"
                    android:textSize="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:cornerRadius="15dp"
                    android:text="Galeria"/>

                <Button
                    android:id="@+id/btAmigos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#878787  "
                    android:textSize="12dp"
                    app:cornerRadius="15dp"
                    android:text="Amigos"/>

                <Button
                    android:id="@+id/btTrabajos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#919191"
                    android:textSize="12dp"
                    android:layout_marginLeft="4dp"
                    app:cornerRadius="15dp"
                    android:text="Trabajos"/>

                <Button
                    android:id="@+id/btForo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#EEEEEE"
                    android:textColor="#919191"
                    android:textSize="12dp"
                    android:layout_marginLeft="4dp"
                    app:cornerRadius="15dp"
                    android:text="Foro"/>

            </LinearLayout>
        </HorizontalScrollView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="525dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:cardBackgroundColor="#EEEEEE"
                app:cardCornerRadius="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripcion:"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="135dp"
                    android:textSize="16dp"/>

                <ImageButton
                    android:id="@+id/btEditarDescripcion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="320dp"
                    android:src="@drawable/editar"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btAplicarDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Aplicar"
                        android:layout_weight="1"
                        app:cornerRadius="40dp"
                        android:layout_marginRight="4dp"
                        android:backgroundTint="#17a2b8"/>

                    <Button
                        android:id="@+id/btCancelarDescripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"
                        android:layout_weight="1"
                        app:cornerRadius="40dp"
                        android:backgroundTint="#DA3B3B"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>


</FrameLayout>