<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/txtIdFollowing"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:text="1"
        android:textStyle="bold"
        android:textSize="15dp"
        android:gravity="center"
        android:background="@drawable/bg_inputs"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dp">

        <TextView
            android:id="@+id/txtNombress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_marginStart="10dp"
            android:text="Nombre"/>

        <TextView
            android:id="@+id/txtApellidoss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="16dp"
            android:layout_toStartOf="@+id/ibDejarSeguir"
            android:layout_toEndOf="@+id/txtNombress"
            android:text="Apellidos" />

        <ImageButton
            android:id="@+id/ibDejarSeguir"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:backgroundTint="#fff"
            android:src="@drawable/dejarseguir" />


    </RelativeLayout>



</LinearLayout>